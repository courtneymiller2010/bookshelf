= simple_form_for(@actor, html: { class: 'form-horizontal' }) do |f|
  .fieldset
    = f.error_notification
  
    .form-inputs
      = f.input :name
      = f.input :birth_date
      = f.input :birthplace
  
    .form-actions
      = f.button :submit, class: 'btn btn-success'
      = link_to 'Cancel', actors_path, class: 'btn btn-default'
