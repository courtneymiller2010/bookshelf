= simple_form_for(@book, html: { class: 'form-horizontal' }) do |f|
  .fieldset
    = f.error_notification
  
    .form-inputs
      = f.input :name
      = f.input :isbn
      = f.input :published
      = f.input :pages_count
      = f.association :bookcase
  
    .form-actions
      = f.button :submit, class: 'btn btn-success'
      = link_to 'Cancel', books_path, class: 'btn btn-default'
