= simple_form_for(@bookcase, html: { class: 'form-horizontal' }) do |f|
  .fieldset
    = f.error_notification
  
    .form-inputs
      = f.input :name
      = f.input :description
      = f.input :shelves_count
  
    .form-actions
      = f.button :submit, class: 'btn btn-success'
      = link_to 'Cancel', bookcases_path, class: 'btn btn-default'
